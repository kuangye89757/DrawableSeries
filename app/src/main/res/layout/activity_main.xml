<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jikexueyuan.drawableseries.MainActivity">

    <!--bitmapDrawable的使用-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bitmap_drawable"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <!--shapeDrawable的使用-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_drawable"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <!--shapeDrawable的使用-->
    <EditText
        android:text="xxxx"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layer_drawable"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <!--stateListDrawable的使用-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/statelist_drawable"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <!--TransitionDrawable的使用-->
    <TextView
        android:id="@+id/test_transition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transition_drawable"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <!--InsetDrawable的使用-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inset_drawable"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <!--ScaleDrawable的使用-->
    <TextView
        android:id="@+id/test_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scale_drawable"
        />

    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />

    <!--ClipDrawable的使用-->
    <ImageView
        android:id="@+id/test_clip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/clip_drawable"
        />
</LinearLayout>
